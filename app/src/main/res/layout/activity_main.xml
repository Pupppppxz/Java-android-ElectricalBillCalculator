<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:background="@drawable/bg_login_register"
    android:orientation="vertical">

    <TextView
        android:id="@+id/login_screen_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/login_screen_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Electricity Calculator"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="26dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_two_layer_orange"
        android:elevation="5dp"
        android:orientation="vertical"
        android:padding="30dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/home_use_electricity" />

        <TextView
            android:id="@+id/login_ads_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Easy to Use"
            android:textAlignment="center"
            android:textSize="22dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/login_ads_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Keep your electricity used"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/sign_in_button"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="40dp"
        android:src="@drawable/google_button"
        android:layout_width="300dp"
        android:layout_height="80dp" />
</LinearLayout>